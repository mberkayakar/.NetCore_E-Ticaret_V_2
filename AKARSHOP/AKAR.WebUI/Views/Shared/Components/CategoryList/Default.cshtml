@using AKAR.Entities

@model List<Category>

 <div class="list-group">
    @*<a asp-controller="Product" asp-action="List" class="list-group-item list-group-item-action">Tüm Kategoriler</a>*@
    <a href="/products" class="list-group-item list-group-item-action">Tüm Kategoriler</a>



    @foreach (var category in Model)
    {
        <a asp-controller="home" 
        asp-action="Index"
        asp-route-category="@category.URL" 
        class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == category.URL.ToString()?"active":"")">
            @category.CategoryName
        </a>
    }
</div>   